<h1>Showing list of articles</h1>


<table>
    <thead>
        <tr>
            <th>Article Title</th>
            <th>Article Description</th>
            <th>Actions</th>
        </tr>
    </thead>

    <tbody>
        <% @articles.each do |article| %>
        <tr>
            <td> <%= article.title %></td>
            <td> <%= article.description %></td>
            <td> <%= link_to 'Show', article_path(article) %> |</td>
            <td> <%= link_to 'Edit' %></td>
            <td> | <%= link_to 'Delete', article_path(article), method: :delete  %></td>
        </tr>
        <% end %>
        
    </tbody>
</table><br>
<%= link_to 'Create New Article' %>