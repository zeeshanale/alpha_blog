<div class="container">
    <div class="row justify-content-center">
        <div class="col-9">
            <%= render 'shared/errors', obj: @user %>
        <%= form_with(model: @user, class: "shadow p-3 mb-3 bg-dark rounded", local: true) do |f| %>
            <div class="form-group row">
            <%= f.label :username, class: "col-2 col-form-label text-light" %>
            <div class="col-10">
            <%= f.text_field :username, class: "form-control shadow rounded", placeholder: "Enter a username" %>
            </div>
            </div>
            <div class="form-group row mt-3">
                <%= f.label :email, class: "col-2 col-form-label text-light" %>
                <div class="col-10"> 
                <%= f.email_field :email, rows: 10, class: "form-control shadow rounded", placeholder: "Enter an Email" %>
                </div>
            </div>
            <div class="form-group row mt-3">
                <%= f.label :password, class: "col-2 col-form-label text-light" %>
                <div class="col-10"> 
                    <%= f.password_field :password, rows: 10, class: "form-control shadow rounded", placeholder: "Choose a password" %>
                </div>
            </div>


            <div class="d-grid gap-2 col-6 mx-auto form-group row justify-content-center mt-3">
            <%= f.submit "Sign Up", class: "btn btn-outline-light btn-lg m-2" %>
            </div>
        <% end %>
        </div>
    <%= link_to '[ Cancel and return to articles listing ]', articles_path, class: "text-info text-center" %>
    </div>
</div>